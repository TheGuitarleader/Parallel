<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
      <OutputType>Exe</OutputType>
      <TargetFramework>net9.0</TargetFramework>
      <ImplicitUsings>enable</ImplicitUsings>
      <ApplicationIcon>parallel-red.ico</ApplicationIcon>
      <Nullable>enable</Nullable>
      <AssemblyName>Parallel</AssemblyName>
      <AssemblyVersion>1.0.0</AssemblyVersion>
      <Company>Kyle Ebbinga</Company>
      <Copyright>Copyright $(Company). All Rights Reserved.</Copyright>
      <FileVersion>$(AssemblyVersion)</FileVersion>
      <Version>$(VersionPrefix)$(AssemblyVersion)</Version>
      <Authors>$(Company)</Authors>
    </PropertyGroup>

    <ItemGroup>
      <PackageReference Include="Microsoft.Extensions.Hosting" Version="9.0.7" />
      <PackageReference Include="Microsoft.Extensions.Hosting.Systemd" Version="9.0.7" />
      <PackageReference Include="Microsoft.Extensions.Hosting.WindowsServices" Version="9.0.7" />
      <PackageReference Include="Serilog.Extensions.Logging" Version="9.0.2" />
      <PackageReference Include="Serilog.Sinks.Console" Version="6.0.0" />
      <PackageReference Include="Serilog.Sinks.File" Version="7.0.0" />
    </ItemGroup>

    <ItemGroup>
      <Using Include="Newtonsoft.Json" />
      <Using Include="Serilog" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Parallel.Core\Parallel.Core.csproj" />
    </ItemGroup>

</Project>
